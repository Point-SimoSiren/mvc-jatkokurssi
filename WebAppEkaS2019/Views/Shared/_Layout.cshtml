<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - versio 0.5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @{
        if (Session["UserName"] == null)
        {
            Html.RenderPartial("_NavbarLoggedOut");
        }
        else
        {
            Html.RenderPartial("_NavbarLoggedIn");
        }
    }


    @*<div class="container body-content">*@
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer class="oma-footer">
            @using System.Globalization
            @{
                string loggausInfo = "";
                if (Session["UserName"] == null)
                {
                    loggausInfo = "Et ole kirjautunut järjestelmään";
                }
                else
                {
                    loggausInfo = "Olet kirjatunut käyttäjänä: " + Session["UserName"];
                }
            }
            <p>&copy; Careeria Northwind-sovellus, @loggausInfo, tänään on @DateTime.Today.ToString("D", CultureInfo.CreateSpecificCulture("fi-FI"))</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
